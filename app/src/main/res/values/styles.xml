<resources>
    <style name="style_zero_zero">
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
    </style>

    <style name="RemoteText" parent="style_zero_zero">
        <item name="android:textColor">@color/remote_text_color</item>
    </style>

    <style name="layout_match_match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--add wi-fi network SSID and Password freeform-->
    <style name="connections_add_wifi_network_back_btn_ff" parent="style_zero_zero">
        <item name="layout_constraintHeight_percent">@fraction/height_percent_connections_add_wifi_network_back_btn_ff</item>
        <item name="layout_constraintWidth_percent">@fraction/width_percent_connections_add_wifi_network_back_btn_ff</item>
        <item name="layout_constraintVertical_bias">@fraction/vertical_bias_connections_add_wifi_network_back_btn_ff</item>
        <item name="layout_constraintHorizontal_bias">@fraction/horizontal_bias_connections_add_wifi_network_back_btn_ff</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="connections_add_wifi_network_set_password_warning_text_ff" parent="style_zero_zero">
        <item name="layout_constraintWidth_percent">@fraction/width_percent_connections_add_wifi_network_set_password_warning_text_ff</item>
        <item name="layout_constraintHeight_percent">@fraction/height_percent_connections_add_wifi_network_set_password_warning_text_ff</item>
        <item name="layout_constraintHorizontal_bias">@fraction/horizontal_bias_connections_add_wifi_network_set_password_warning_text_ff</item>
        <item name="layout_constraintVertical_bias">@fraction/vertical_bias_connections_add_wifi_network_set_password_warning_text_ff</item>
        <item name="android:textColor">#FFF000</item>
        <item name="android:textSize">10sp</item>

    </style>


    <style name="connections_wifi_name_count_text_ff" parent="style_zero_zero">
        <item name="layout_constraintWidth_percent">@fraction/width_percent_connections_wifi_name_count_text_ff</item>
        <item name="layout_constraintHeight_percent">@fraction/height_percent_connections_wifi_name_count_text_ff</item>
        <item name="layout_constraintHorizontal_bias">@fraction/horizontal_bias_connections_wifi_name_count_text_ff</item>
        <item name="layout_constraintVertical_bias">@fraction/vertical_bias_connections_wifi_name_count_text_ff</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textSize">34sp</item>
    </style>


    <style name="connections_change_wifi_password_phone_searchbox_ff" parent="style_zero_zero">
        <item name="layout_constraintWidth_percent">@fraction/width_percent_connections_change_wifi_password_phone_searchbox_ff</item>
        <item name="layout_constraintHeight_percent">@fraction/height_percent_connections_change_wifi_password_phone_searchbox_ff</item>
        <item name="layout_constraintHorizontal_bias">@fraction/horizontal_bias_connections_change_wifi_password_phone_searchbox_ff</item>
        <item name="layout_constraintVertical_bias">@fraction/vertical_bias_connections_change_wifi_password_phone_searchbox_ff</item>
    </style>


    <style name="connections_add_wifi_network_edit_text_view_ff" parent="style_zero_zero">
        <item name="layout_constraintHeight_percent">@fraction/height_percent_connections_add_wifi_network_edit_text_ff</item>
        <item name="layout_constraintWidth_percent">@fraction/width_percent_connections_add_wifi_network_edit_text_ff</item>
        <item name="layout_constraintVertical_bias">@fraction/vertical_bias_connections_add_wifi_network_edit_text_ff</item>
        <item name="layout_constraintHorizontal_bias">@fraction/horizontal_bias_connections_add_wifi_network_edit_text_ff</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textDirection">locale</item>
        <item name="android:ems">10</item>
        <item name="boxStrokeColor">@color/textView_primary_color</item>
        <item name="android:textColorHint">@color/edit_text_normal_color_ff</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/edit_text_normal_color_ff</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/edit_text_normal_color_ff</item>
        <item name="android:longClickable">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:textColorHighlight">@color/text_input_highlighted_color</item>
        <item name="android:textSize">@dimen/text_size_connections_add_wifi_network_edit_text_ff</item>
        <item name="android:paddingStart">@dimen/padding_connections_add_wifi_network_edit_text_ff</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:paddingEnd">@dimen/padding_connections_add_hotspot_edit_text_ff</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="connections_add_wifi_network_header_text_ff" parent="layout_zero_wrap">
        <item name="android:textSize">@dimen/text_size_connections_add_wifi_network_header_text_ff</item>
        <item name="android:textColor">@color/edit_text_header_text_color_ff</item>
    </style>
    <style name="layout_zero_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
    </style>

    <style name="style_zero_zero_seat">
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:src">@drawable/avd_anim_massage_ani02_04_11</item>
    </style>
</resources>
